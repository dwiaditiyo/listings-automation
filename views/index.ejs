    <script>
  
       const fetchlist = document.querySelector('#fetch_listings')
       const uplist = document.querySelector('#upload_listings')

       fetchlist.onclick = () => { 
          location.href = window.location.origin + '/fetch-listings'
       }

       uplist.onclick = () => {
          location.href = window.location.origin + '/upload-listings'
       }
    </script>
</html>